<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:stateListAnimator="@null">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txEvsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Eventos" />

                <LinearLayout
                    android:id="@+id/lsEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/menuBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:orientation="vertical">

            <include layout="@layout/menu_primary" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:stateListAnimator="@null">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bt_action_rounded"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:padding="2dp"
            android:onClick="doFilter"
            android:src="@drawable/ic_filter"
            android:tint="@color/colorMenuIconPrimary" />

    </LinearLayout>
</RelativeLayout>
