<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".activity.MapsActivity" />

    <LinearLayout
        android:id="@+id/menuTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/map"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/searchBottom"
            android:layout_width="fill_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/input_search"
                android:layout_weight="9"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:hint="EndereÃ§o, Cidade ou CEP"
                android:background="#FFF"
                android:imeOptions="actionSearch"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/map"
        android:layout_alignBottom="@id/map"
        android:layout_marginBottom="60dp"
        android:paddingHorizontal="20dp"
        android:fillViewport="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="2dp"
            android:background="@drawable/bt_action_rounded"
            android:clickable="true"
            android:focusable="true"
            android:elevation="0dp"
            android:scaleType="fitXY"
            android:onClick="onClickCreateEvent"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_add"
            android:tint="@color/colorMenuIconPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/map"
        android:fillViewport="true"
        android:stateListAnimator="@null"
        android:orientation="vertical">

        <include layout="@layout/menu_primary" />

    </LinearLayout>

</RelativeLayout>

