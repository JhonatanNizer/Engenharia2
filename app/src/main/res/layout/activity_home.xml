<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:orientation="vertical"
        android:stateListAnimator="@null">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/contentScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:stateListAnimator="@null">

                <TextView
                    android:id="@+id/txHoMyEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Meus Eventos" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:id="@+id/lsHoMyEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </ScrollView>

                <TextView
                    android:id="@+id/txHoSubscribedEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="Eventos em que participo" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:id="@+id/lsHoSubscribedEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/menuBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/map"
            android:fillViewport="true"
            android:stateListAnimator="@null"
            android:orientation="vertical">

            <include layout="@layout/menu_primary" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
